{
  "compilerOptions": {
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2020",
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "sourceMap": false,
    "outDir": "./build"
  },
  "include": ["src/*.ts", "src/*.mts"],
  "exclude": ["node_modules"]
}
